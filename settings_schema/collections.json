{
  "name": "Collections",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "label": "Header layout",
      "id": "collection_header_layout",
      "type": "select",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "split_image_left", "label": "Split image left" },
        { "value": "split_image_right", "label": "Split image right" },
        { "value": "banner_image", "label": "Banner image above description" },
        { "value": "banner_description", "label": "Banner containing description" }
      ],
      "default": "standard"
    },
    {
      "label": "Header description alignment",
      "id": "collection_header_description_alignment",
      "type": "select",
      "options": [
        { "value": "top_left", "label": "Top Left" },
        { "value": "top_center", "label": "Top Center" },
        { "value": "top_right", "label": "Top Right" },
        { "value": "middle_left", "label": "Middle Left" },
        { "value": "middle_center", "label": "Middle Center" },
        { "value": "middle_right", "label": "Middle Right" },
        { "value": "bottom_left", "label": "Bottom Left" },
        { "value": "bottom_center", "label": "Bottom Center" },
        { "value": "bottom_right", "label": "Bottom Right" }
      ],
      "default": "middle_center",
      "info": "IMPORTANT: This setting only applies if your header layout is set to 'Banner containing description'"
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "label": "Show all products variants as items on the collections page",
      "id": "show_product_variants_as_items",
      "type": "checkbox",
      "default": false,
      "info": "This is a global settings so all product variants will be displayed like this if enabled."
    },
    {
      "type": "header",
      "content": "Sort and filter"
    },
    {
      "label": "Enable collections to be sorted",
      "id": "show_collection_sort_by",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Enable collections to be filtered",
      "id": "show_collection_filter_by",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Compound Tags: Allow collections to be filtered by more than one tag",
      "id": "filter_collection_by_multiple_tags",
      "type": "checkbox",
      "default": true,
      "info": "If left unchecked collections will be filtered by only one tag at a time"
    },
    {
      "label": "Tag filtering style",
      "id": "filter_by_tag_style",
      "type": "select",
      "options": [
        { "value": "dropdown", "label": "Dropdowns" },
        { "value": "button", "label": "Buttons" }
      ],
      "default": "dropdown"
    },
    {
      "type": "paragraph",
      "content": "Grouping Tags: You can easily group tags by prefixing the tag with `groupname:`"
    },
    {
      "label": "Hidden Tag Groups",
      "id": "hidden_tag_group_list",
      "type": "textarea",
      "default": "hidden,",
      "info": "A commar seperated list of tag groups that will be hidden. i.e. to hide a tag put it in a group of hidden like this `hidden:tag` and if the group name is listed here then all tags under that group will be hidden."
    },
    {
      "type": "header",
      "content": "Collection Template Switcher"
    },
    {
      "type": "paragraph",
      "content": "You can allow users to switch between different collection templates while viewing your site. To enable this you must have at least one template selected other than your default template."
    },
    {
      "label": "Grid view",
      "id": "collection_template_grid",
      "type": "checkbox",
      "default": false
    },
    {
      "label": "List view",
      "id": "collection_template_list",
      "type": "checkbox",
      "default": false
    },
    {
      "label": "Lookbook view",
      "id": "collection_template_lookbook",
      "type": "checkbox",
      "default": false
    }
  ]
}