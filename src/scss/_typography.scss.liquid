/* Typograhical Styles */

a:hover,
a:active,
a:focus {
  text-decoration: none;
  li &, p & {
    text-decoration: underline;
  }
}

.pagination>li>a:hover,
.pagination>li>a:focus,
.pagination>li>span:hover,
.pagination>li>span:focus {
  text-decoration: none;
}

h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
  a {
    color: inherit;
  }
}

table {
  tfoot tr:first-child td {
    border-top-width: 2px;
  }
}

.homepage-section-collection {
  .page-header {
    overflow: hidden;
  }
  .page-header h1 {
    float: left;
  }
  .view-all-link {
    float: right;
    margin-top: 1em;
  }
}

.group-item-title,
.cart-item-title {
  margin-top: ($line-height-computed / 2);
  margin-bottom: ($line-height-computed / 2);
  font-size: $font-size-h5;
  font-weight: $strong-weight;
  
  .list-collections &,
  .collection-list &,
  .search & {
    margin-bottom: ($line-height-computed / 2);
  	font-size: $font-size-h3;
  }
}

.cart-table {
  img {
    margin: auto;
  }
  
  td {
    vertical-align: middle;
    text-align: center;
  }
  
  .cart-item-details {
    color: $thumbnail-caption-color;
  }
  
  @media (min-width: $grid-float-breakpoint) {
    
    .cart-item-total-label,
    .cart-item-total {
      text-align: right;
    }
    
    .cart-item-product-label,
    .cart-item-quantity-label,
    .cart-item-price-label,
    .cart-item-price {
      text-align: center;
    }
    
    .cart-item-details {
      text-align: left;
    }
  }
}

.cart-details {
  text-align: right;
  margin: $grid-gutter-width auto;
  @media (min-width: $grid-float-breakpoint) {
    margin: auto;
  }
}

.article-list {
  > li > a {
    padding-left: 0;
  }
  a:hover,
  a:active,
  a:focus {
    text-decoration: none;
  }
  h5 {
    margin-top: 0;
  }
  .article-list-meta {
    .separator {
      margin: 0 $grid-gutter-width / 8;
    }
  }
}

.account-details {
  dt,
  dd {
    text-align: left;
    margin-bottom: 0.5em;
  }
}