<div class="customer-password-form">
  {% form 'reset_customer_password' %}
    {% include 'form_errors' %}

    <div class="form-group">
      <label for="customer_password">Password</label>
      <input class="form-control input-lg" type="password" value="" name="customer[password]" id="customer_password" placeholder="Passsword" />
    </div>
    
    <div class="form-group">
      <label for="password_confirmation">Password Confirmation</label>
      <input class="form-control input-lg" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" placeholder="Passsword Confirmation" />
    </div>
    
        <input class="btn btn-primary btn-lg" type="submit" value="{% if form_customer_password == 'activate' %}Activate Account{% else %}Reset Password{% endif %}" />
        {% if form_customer_password == 'activate' %}
          <span class="note">or</span><input type="submit" class="cancel btn btn-default btn-lg" name="decline" id="customer_decline" value="Decline Invitation" />
        {% endif %}
      </div>
    </div>
  {% endform %}
</div>