/* Typograhical Styles */

a:hover,
a:active,
a:focus {
  text-decoration: none;
  li &, p & {
    text-decoration: underline;
  }
}

h1,
h2,
h3,
h4,
h5,
h6 {
  a {
    color: inherit;
  }
}

.item-details {
  @extend .caption;
  @extend .text-center;
}

.item-title {
  font-weight: $strong-weight;
}

.money-currency, .compare-at-price {
  @extend .small;
  @extend .text-muted;
}

.product-details .product-price {
  @extend .h3;
}