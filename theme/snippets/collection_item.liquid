<div class="item-wrap">
  <div class="item">
    <a href="{{ c.url }}" title="{{ c.title }}">
      <div class="item-image">
        {{ c.image | img_url: 'medium' | img_tag }}
      </div>
      <div class="item-details">
        <div class="item-title">{{ c.title }}</div>
        <div class="item-count">{{ c.all_products_count }}</div>
      </div>
    </a>
  </div>
</div>
