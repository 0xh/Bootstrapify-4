.offcanvas-cart {
  background: #fff;
  border-left: #ddd solid 1px;
  
  header {
    text-align: right;
  }
  header,
  .side-cart {
    padding: $grid-gutter-width / 2;
  }
}
  
.side-cart-item {
  margin-bottom: $grid-gutter-width * 0.75;
  h4 {
    margin-top: 0;
  }
}
[data-phd-side-cart-item-price],
[data-phd-side-cart-item-line-price] {
  text-align: right;
}

[data-phd-side-cart-item-title] {
  @include make-xs-column(8);
}
[data-phd-side-cart-item-price] {
  @include make-xs-column(4);
  @extend .small;
}
[data-phd-side-cart-item-qty],
[data-phd-side-cart-item-line-price] {
  @include make-xs-column(6);
}

/*
  SixPack Builder
*/

.builder-display {
  margin-bottom: 1.5em;
  
  .builder-content {
  }
  
  .builder-items {
    padding: 1em 0;
    background-color: #fff;
    &.affix {
      top: 0;
      width: 100%;
      z-index: 3;
      
      .offcanvas-open & {
        @media (min-width: $screen-md-min) {
          width: $offscreen-main-md;
        }
        @media (min-width: $screen-lg-min) {
          width: $offscreen-main-lg;
        }
      }
    }
  }
}

[data-phd-six-pack="holding"] {
  .holding-item-wrapper {
    @include make-xs-column(12);
    @include make-sm-column(7);
    z-index: 1;
  }
  .builder-total {
    @include make-xs-column(7);
    @include make-sm-column(3);
    
    p {
      text-align: center;
      margin: 0;
      &.price {
        font-size: $font-size-h3;
        @media (min-width: $screen-sm-min) {
          font-size: $font-size-h1;
        }
      }
    }
  }
  .phd-add-to-cart-form {
    @include make-xs-column(5);
    @include make-sm-column(2);
    
    .btn{
      @extend .btn-primary;
      &:disabled {
        @extend .btn-default;
      }
    }
  }
  
  // verticaly center all divs in a row
  // note: requires white space to be removed from between col elements
  .holding-item-wrapper,
  .builder-total,
  .phd-add-to-cart-form {
    display: inline-block;
    float: none;
    vertical-align: middle;
  }
  
  [data-phd-holding-items] {
    line-height: 1.5;
    width: 100%;
    white-space: nowrap;
    overflow-x: scroll;
    overflow-y: visible;
    -webkit-overflow-scrolling: touch;
  }
  
  .holding-item-group {
    display: inline-block;
    overflow: hidden;
    margin-right: 1em;
  }
  
  .holding-item {
    position: relative;
    display: block;
    float: left;
    width: 1.5em;
    margin: 0 0.25em 0 0;
    line-height: 1.75em;
    text-align: center;
    cursor: pointer;
    
    svg {
      display: block;
    }
    
    path {
      fill: $brand-primary;
    }
    
    span {
      color: #fff;
      visibility: hidden;
      position: absolute;
      left: 6px;
      top: 26px;
    }
    
    &:hover span,
    &:focus span,
    &:active span {
      visibility: visible;
    }
    
    &.holding-item-disabled {
      &:hover span {
        visibility: hidden;
      }
      
      path {
        fill: transparent;
        stroke: #ddd;
        stroke-position: inside;
        stroke-width: 8px;
      }
    }
  }
}

.collection-phd-sixpack {
  .group-item-image {
    position: relative;
  }
  .group-item-image .fa {
    position: absolute;
    left: 0;
    top: 0;
  }
  
  // make inputs lrg on smll screens
  @media (max-width: $screen-sm-max) {
    @include input-size('.group-item .form-control', $input-height-large, $padding-large-vertical, $padding-large-horizontal, $font-size-large, $line-height-large, $input-border-radius-large);
    .group-item .btn {
      @include button-size($padding-large-vertical, $padding-large-horizontal, $font-size-large, $line-height-large, $border-radius-large);
    }
    .group-item .input-group-btn:first-child > .btn {
      @include border-right-radius(0);
    }
    .group-item .input-group-btn:last-child > .btn {
      @include border-left-radius(0);
    }
  }
}