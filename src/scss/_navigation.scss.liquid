/* General styles for all navigations */

.nav-inline { // Placeholder?
  @extend .list-inline;
  & > li {
    display: inline-block;
  }
}

[data-cart-display] > span {
  @extend .hidden-xs; //!!!
}

.collection-controls {
  @extend .clearfix; //!!!
}

.collection-sort-by {
  float: right;
  margin-right: $grid-gutter-width;
  button {
    @extend .btn; //!!!
    @extend .btn-default; //!!!
  }
}

.collection-template-switcher {
  float: right;
  ul {
    @extend .nav; //!!!
    @extend .nav-inline; //%?
    & > li > a {
      padding-left: $grid-gutter-width / 4;
      padding-right: $grid-gutter-width / 4;
    }
  }
}

.pagination-wrapper {
  @include make-xs-column(12);
  text-align: center;
}

.social-links {
  ul {
    @extend .nav; //!!!
    @extend .nav-inline; //%?
  }
  ul > li > a {
    padding-left: 0;
    padding-right: 0;
  }
  .footer-social & .fa {
    font-size: 1.5em;
  }
}