/*
  Base Layouts and Grids
*/

.sheet {
  @extend {% if settings.container_width == 'fluid' %}.container-fluid{% else %}.container{% endif %};
}

.sheet-header {
  @extend .page-header;
}

.sheet-content {
  margin-bottom: $line-height-computed * 2;
}

.group {
  @include make-row();
}

.group-item-wrap {
  @include make-xs-column(12);
  @include make-sm-column(6);
  @include make-md-column(3);
}

.group-item {
  img {
    margin-left: auto;
    margin-right: auto;
  }
}

.group-item-title {
  margin-top: $grid-gutter-width / 2;
  margin-bottom: $grid-gutter-width / 2;
}

.group-item-buttons {
  margin-top: $grid-gutter-width / 2;
}

table {
  .money {
    text-align: right;
  }
}

footer {
  overflow: hidden;

  .sheet-content {
    @include make-row();
    margin-bottom: 0;
  }

  .footer-content,
  .site-credits {
    margin: $grid-gutter-width / 2 auto;
  }

  [data-col-count="0"] {
    display: none;
  }

  @for $i from 1 through 4 {
    [data-col-count="#{$i}"] {
      [class*="footer-col"] {
        @include make-sm-column(12 / $i);
      }
    }
  }

  .site-credits {
    text-align: center;
    @media (min-width: $grid-float-breakpoint) {
      br {
        display: none;
      }
    }
  }
}

/*
  Default page specific layouts
*/

.index {
  @include adaptive-columns('.group-item-wrap');
}

// all collection templates
body[class*="collection"] {
  
  @include adaptive-columns('.group-item-wrap');
  
  .sheet-content {
    @include make-row();
  }
  .collection-message {
    @include make-sm-column(12);
  }
}

// /collections template
.list-collections {
  @include adaptive-columns('.group-item-wrap');

  .group-item {
    & > a {
      overflow: hidden;
      display: block;
      position: relative;
    }

    .group-item-details {
      position: absolute;
      top: 50%;
      width: 100%;
      -webkit-transform: translateY(-50%);
      -moz-transform: translateY(-50%);
    	transform: translateY(-50%);
    	padding: 0 $grid-gutter-width;
    	text-align: center;
      transition: .5s;
      background-color: rgba(#fff, 0.8);
    }
    
    &:hover {
      .group-item-details {
        opacity: 0;
      }
    }
  }
}

// all collection templates
body[class*="collection"] {
  
  @include adaptive-columns('.group-item-wrap');
  
  .sheet-content {
    @include make-row();
  }
  .collection-message {
    @include make-sm-column(12);
  }
}

.collection-list {
  // override the grid cols so that we have a list form
  // TODO: make these look better
  .group-item-wrap {
    @include make-sm-column(12);
  }
  .group-item {
    @include make-row();
  }
  .group-item-image {
    @include make-sm-column(4);
  }
  .group-item-details {
    @extend .text-left;
    @include make-sm-column(8);
  }
}

.collection-lookbook {
  // we need to undo the sticky footer to get this to work properlly because the images are hidden off the page and display:table mucks things up
  display: block;
  .site-content, .site-footer {
    display: block;
    height: auto;
  }

  // Image scroller
  .js & .products-wrap {
    // make the products span the whole of the page but hide the ones that go off the edge
    width: 100%;
    overflow: hidden;
    position: relative;
    opacity: 0;
    margin-bottom: $line-height-computed * 2;

    .group-item-wrap {
      background-color: #fff; // TODO: use site background color
      transition: margin 1s ease;
      // override grid cols for lookbook
      @include make-xs-column(3);
      @include make-sm-column(3);
      @include make-md-column(3);
      @include make-lg-column(3);

      width: $lookbook-item-max-width-xs;
      @media (orientation: portrait) {
        width: $lookbook-item-max-width-sm;
      }
      @media (min-width: $screen-sm-min) {
        width: $lookbook-item-max-width-sm;
      }
      @media (min-width: $screen-md-min) and (min-height: $lookbook-min-height-md) {
        width: $lookbook-item-max-width-md;
      }
      @media (min-width: $screen-lg-min) and (min-height: $lookbook-min-height-lg) {
        width: $lookbook-item-max-width-lg;
      }
    }

    .lookbook-controls {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    [data-gallery-direction] {
      position: absolute;
      font-size: 2.75em;
      color: rgba(255,255,255,.5);
      text-shadow: 0px 1px 4px rgba(0,0,0,.3);
      .no-touch &:hover {
        color: #fff;
      }
    }

    [data-gallery-direction] {
      top: 50%;
      -webkit-transform: translateY(-50%);
      -moz-transform: translateY(-50%);
      transform: translateY(-50%);
      &.disabled, &.disabled:hover {
        color: rgba(0,0,0,.3);
        text-shadow: none;
        cursor: not-allowed;
      }
    }

    [data-gallery-direction="left"] {
      left: 2.5%;
    }

    [data-gallery-direction="right"] {
      right: 2.5%;
    }
  }
}

.product {
  {% assign centered = false %}
  {% if settings.product_image_layout == 'center' %}
    {% assign is_centered = true %}
  {% endif %}

  .sheet-content, .product-details-content {
    @include make-row();
  }

  .product-header, .product-images, .product-details, .product-description {
    margin-bottom: $line-height-computed;
  }

  .product-images {
    text-align: center;
    img {
      margin: auto;
    }
    {% unless is_centered %}
    @media (min-width: $grid-float-breakpoint) {
      margin-top: ($line-height-computed * 3); // Line up top of image with top of page-header h1 using the same var that bs uses to calc this
    }
    {% endunless %}
  }

  {% if settings.product_image_layout == 'left' %}
    .product-header, .product-details, .product-description {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: right;
      }
    }
    .product-images {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: left;
      }
    }
  {% elsif settings.product_image_layout == 'right' %}
    .product-header, .product-details, .product-description {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: left;
      }
    }
    .product-images {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: right;
      }
    }
  {% elsif settings.product_image_layout == 'center' %}
    .product-header, .product-images {
      @include make-sm-column(12);
    }
    .product-details, .product-description {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: right;
      }
    }
  {% endif %}

  .product-price {
    margin-top: $line-height-computed / 2;
    margin-bottom: $line-height-computed;
    @include make-sm-column(12);
  }

  .add-to-cart-message {
    @include make-sm-column(12);
  }

  .add-to-cart-form {
    margin-bottom: $line-height-computed;
    {% if is_centered %}
      @include make-sm-column(12);
    {% else %}
      @include make-sm-column(6);
    {% endif %}
  }

  .social-share-links {
    @include make-row();
    & .nav {
      text-align: center;
      {% if is_centered %}
        @include make-sm-column(12);
      {% else %}
        @include make-sm-column(6);
      {% endif %}
    }
  }

  .product-image-main {
    margin-bottom: $grid-gutter-width;
  }
  .product-image-thumbs {
    @include make-row();
    li {
      @include make-xs-column(6);
      @include make-sm-column(3);
      margin-bottom: $grid-gutter-width;
    }
  }
}

.cart {
  .sheet-content {
    @include make-row();
  }

  .cart-items,
  .cart-details,
  .cart-extras {
    margin: $grid-gutter-width auto;
  }

  .cart-items {
    @include make-xs-column(12);
    margin-top: 0;
  }

  .cart-details {
    @include make-sm-column(6);
    @include make-md-column(4);
    h3 {
      margin-top: 0;
      margin-bottom: $grid-gutter-width / 2;
    }
    .cart-shipping-note,
    .cart-additional-buttons {
      margin: ($grid-gutter-width / 2) auto;
    }
  }

  .cart-extras {
    @include make-sm-column(6);
    @include make-md-column(8);

    .cart-extras-content {
      @include make-row();
    }

    .cart-instructions {
      @include make-md-column(6);
      textarea {
        min-height: 6em;
      }
    }
  }

  .cart-message {
    @include make-sm-column(12);
  }

  .cart-item-label-mini {
    display: none;
  }

  // Display cart table as a list on mobiles
  @media (max-width: $grid-float-breakpoint-max) {
    .cart-table {
      thead {
        display: none;
      }
      table, tr, td {
        display: block;
      }
      tr {
        overflow: hidden;
        border-bottom: 1px solid $table-border-color;
      }
      td {
        border-top: none;
      }
      .cart-item-label-mini {
        display: inline;
      }
    }
  }

  @media (min-width: $grid-float-breakpoint) {
    .cart-table td {
      vertical-align: middle;
    }
    .cart-item a {
      display: table-row;
    }
    .cart-item-image,
    .cart-item-details {
      display: table-cell;
      vertical-align: middle;
    }
    .cart-item-image {
      width: 35%;
    }
    .cart-item-details {
      padding-left: $grid-gutter-width / 2;
    }
    .cart-item-quantity,
    .cart-item-price,
    .cart-item-total {
      width: 20%;
    }
  }

}

.page-contact {
  .sheet-content {
    @include make-row();
  }

  .page-content, .contact-content {
    @include make-sm-column(6);
  }
  .page-content {
    @include make-sm-column-push(6);
  }
  .contact-content {
    @include make-sm-column-pull(6);
  }
}

.customers-register,
.customers-login,
.customers-activate-account,
.customers-reset-password {
  .sheet-header {
    text-align: center;
  }
  
  .sheet-content {
    @include make-row();
  }
  
  .sheet-content > div {
    @include make-xs-column(10);
    @include make-xs-column-offset(1);
    @include make-sm-column(6);
    @include make-sm-column-offset(3);
  }
}

