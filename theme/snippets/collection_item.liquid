<div class="group-item-wrap">
  <figure class="group-item thumbnail">
    <a href="{{ c.url }}" title="{{ c.title }}">
      <div class="group-item-image">
        {% if c.image %}
          {{ c.image | img_url: '1024x1024' | img_tag: c.title }}
        {% elsif c.products.first.featured_image %}
          {{ c.products.first.featured_image | img_url: '1024x1024' | img_tag: c.title }}
        {% endif %}
      </div>
      <figcaption class="group-item-details caption">
        <h3 class="group-item-title">{{ collection_title | default: c.title }}</h3>

        {% if settings.show_collection_product_count %}
        <div class="group-item-count">{{ c.all_products_count }}</div>
        {% endif %}
      </figcaption>
    </a>
  </figure>
</div>
