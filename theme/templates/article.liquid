<main role="main">
  {% assign content = article.content %}
  {% if settings.enable_article_banners and content contains 'src=' %}
    {% include '_extract_images' with content %}
    {% assign image = images | first %}
    {% assign content = content | remove: image %}
    <div class="banner-image banner-image-fullscreen">
      {{ image }}
    </div>
  {% endif %}
  
  <div class="sheet">
    <article class="blog-article">
      <header class="sheet-header page-header">
        <h1>{{ article.title }}</h1>
      </header>
    
      <div class="blog-article-content-wrap">
        <aside class="blog-article-meta">
          {% include 'article_meta' %}
        </aside>
    
        <section class="blog-article-content">
          {{ content }}
        </section>
      </div>
      <footer>
        {% if settings.blog_show_author_bio and article.user.bio != blank %}
        <div class="well text-muted">
  				<strong>{{ 'blog.article_list.author_html' | t: author: article.author }}</strong>
  				<p>{{ article.user.bio }}</p>
  			</div>
        {% endif %}
        
        {% if settings.enable_rss_link %}
        <p class="rss-link">
          <a href="{{ blog.url | append: '.atom' }}">{{ 'blog.general.rss_link_html' | t: blog_title: blog.title }}</a>
        </p>
        {% endif %}
      </footer>
    </article>
    
		{% if blog.previous_article or blog.next_article %}
		<ul class="pager">
			<li class="previous{% unless blog.previous_article %} disabled{% endunless %}">{{ 'blog.general.previous_article_html' | t | link_to: blog.previous_article }}</li>
      <li>{{ blog.title | link_to: blog.url }}</li>
			<li class="next{% unless blog.next_article %} disabled{% endunless %}">{{ 'blog.general.next_article_html' | t | link_to: blog.next_article }}</li>
		</ul>
		{% endif %}
		
    {% if article.comments_enabled? %}
		<div class="blog-article-comments" id="comments">
  		{% include 'article_comments' %}
		</div>
		{% endif %}
  </div>
</main>

{% include 'site_aside' %}