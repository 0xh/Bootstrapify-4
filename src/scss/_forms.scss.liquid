.add-to-cart-form,
.cart-form,
.contact-form,
.newsletter-form,
.customer-register-form,
.customer-login-form,
.customer-recover-password-form,
.customer-activate-form,
.customer-reset-form,
.customer-address-form-new,
.customer-address-form-edit {
  
  .selector-wrapper {
    // added in by shopify's js so we have no control of this
    // here we have to use extend
    @extend .form-group;
    select {
      @extend .form-control;
    }
  }
  
  // notes and errors are either created by Shopify or JS
  .errors, .note {
    @extend .alert;
  }
  
  .errors, .note.error {
    @extend .alert-danger;
  }
  
  .note.success {
    @extend .alert-success;
  }
}

.add-to-cart-message, .cart-message {
  .note {
    @extend .alert;
  }
  .note.success {
    @extend .alert-success;
  }
}

.search-lg {
  padding: 1.5em 1em;
  text-align: center;
}

[type="submit"] + .cancel-link {
  margin-left: 0.25em;
}

input.btn-link {
  padding: 0;
}

.placeholder {
  [class*="customers"] {
    label {
      display: none;
    }
  }
  .customers-addresses {
    label {
      display: block;
    }
  }
}