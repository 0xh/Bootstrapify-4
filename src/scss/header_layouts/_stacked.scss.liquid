#header-layout-stacked {
  .navbar .navbar {
    margin-bottom: 0;
  }
  
  .navigation .navigation-cart {
    @media (max-width: $grid-float-breakpoint -1px) {
      display: none;
    }
  }
  
  .header-top-menu {
    @media (min-width: $grid-float-breakpoint) {
      font-size: .9em;
      .navbar {
        border: none;
      }
    }
  }
  
  .header-main-menu {
    .navbar-nav {
      float: none;
      text-align: center;
    }
    .navbar-nav > li {
      float: none;
      display: inline-block;
    }
    .navbar-nav > li > a {
      display: inline-block;
    }
  }
}