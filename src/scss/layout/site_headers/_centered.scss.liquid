/*
  Styles for centered header layout snippet
*/

#header-layout-centered {
  .header-logo {
    text-align: center;
    a {
      overflow: hidden;
      display: inline-block;
      vertical-align: middle;
    }
    
    {% unless settings.logo_max_height == blank %}
    img {
      max-height: {{ settings.logo_max_height }};
    }
    {% endunless %}
  }
  
  .header-main-menu {
    .navbar {
      margin-top: $grid-gutter-width;
      margin-bottom: 0;
    }
    .navbar-nav {
      float: none;
      text-align: center;
    }
    .navbar-nav > li {
      float: none;
      display: inline-block;
    }
    .navbar-nav > li > a {
      display: inline-block;
    }
  }
  
  .header-top-menu {
    .navbar-left:first-child {
      margin-left: -($grid-gutter-width/2);
    }
  }
}
