  .builder-items {
    padding: 1em 0;
    background-color: #fff;
//     border: green solid 1px;
    &.affix {
      top: 0;
      width: 100%;
      z-index: 3;
    }
  }
}

[data-phd-six-pack="holding"] {
  [data-phd-holding-items] {
    @include make-xs-column(12);
    @include make-sm-column(10);
  }
  .phd-add-to-cart-form {
    @include make-xs-column(12);
    @include make-sm-column(2);
    
    .btn{
      @extend .btn-success;
      &:disabled {
        @extend .btn-default;
      }
    }
  }
  
  .holding-item {
    display: inline-block;
    width: 2em;
    height: 2em;
    margin: 0.65em 1px 0;
    background-color: #E0F0D9;
    border: rgba(0,0,0,0.3) solid 2px;
    border-radius: 1em;
    
    &.holding-item-disabled {
      background-color: #fff;
      border: #bbb dashed 2px;
    }
  }
  .holding-item-spacer {
    display: inline-block;
    width: 1em;
  }
}

.collection-phd-sixpack {
  .group-item-image {
    position: relative;
  }
  .group-item-image .fa {
    position: absolute;
    left: 0;
    top: 0;
  }
}