.add-to-cart-form, .cart-form, .contact-form, .newsletter-form {
  label {
    @extend .control-label; //!!!
  }
  
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=tel],
  input[type=number],
  select,
  textarea {
    @extend .form-control; //!!!
  }
  
  button {
    @extend .btn; //!!!
    @extend .btn-default; //!!!
  }
  
  .selector-wrapper {
    @extend .form-group; //!!!
  }
  
  .errors, .note { // <!-- dont have controll over the errors ele
    @extend .alert; //!!!
  }
  
  .errors, .note.error { // <!--dont have controll over the errors ele
    @extend .alert-danger; //!!!
  }
  
  .note.success {
    @extend .alert-success; //!!!
  }
}

.add-to-cart-message, .cart-message {
  .note {
    @extend .alert; //!!!
  }
  .note.success {
    @extend .alert-success; //!!!
  }
}