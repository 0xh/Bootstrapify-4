/* General styles for all navigations */

.nav-inline {
  @extend .list-inline;
  & > li {
    display: inline-block;
  }
}

[data-cart-display] > span { // this span is in the translations not in the actual theme markup
  @extend .hidden-xs;
}

.collection-controls {
  & > div {
    margin-bottom: 0.5em;
    @media (min-width: $grid-float-breakpoint) {
      float: right;
      margin-right: $grid-gutter-width;
      margin-bottom: 0;
      &:first-of-type {
        margin-right: 0;
      }
    }
  }
}

.collection-sort-by, .collection-filter-by {
  .fa {
    float: right;
    padding: 0.2em 0;
  }
}

.collection-template-switcher {
  ul > li > a {
    padding-left: $grid-gutter-width / 4;
    padding-right: $grid-gutter-width / 4;
  }
}

.pagination-wrapper {
  @include make-xs-column(12);
  text-align: center;
}

.list-links {
  li + li {
    margin-top: 0.5em;
  }
}
