/*
  Base Layouts and Grids
*/

.sheet {
  @include container;
}

.sheet-content {
  margin-bottom: $line-height-computed * 2;
}

.group,
.list {
  @include make-row();
  @include columns('.group-item-wrap');
}

.list-item-wrap {
  @include make-xs-column(12);
}

.group-item {
  img {
    margin-left: auto;
    margin-right: auto;
  }
}

.group-item-title {
  margin-top: $grid-gutter-width / 2;
  margin-bottom: $grid-gutter-width / 2;
}

.group-item-buttons {
  margin-top: $grid-gutter-width / 2;
}

table {
  .money {
    text-align: right;
  }
}

footer {
  overflow: hidden;

  .sheet-content {
    @include make-row();
    margin-bottom: 0;
  }

  .footer-content,
  .site-credits {
    margin: $grid-gutter-width / 2 auto;
  }

  [data-col-count="0"] {
    display: none;
  }

  @for $i from 1 through 4 {
    [data-col-count="#{$i}"] {
      [class*="footer-col"] {
        @include make-sm-column(12 / $i);
      }
    }
  }

  .site-credits {
    text-align: center;
    @media (min-width: $grid-float-breakpoint) {
      br {
        display: none;
      }
    }
  }
}

/*
  Default page specific layouts
*/

// all collection templates
body[class*="collection"] {
  .sheet-content {
    @include make-row();
  }
  .collection-message {
    @include make-sm-column(12);
  }
}

body.collection-list,
body.search .search-results {
  // override the grid cols so that we have a list form
  .products {
    .group-item-wrap {
      @include make-xs-column(12);
      @include make-sm-column(12);
      @include make-md-column(12);
      @include make-lg-column(12);
      
      margin-bottom: $grid-gutter-width;
      @media (min-width: $grid-float-breakpoint) {
        margin-bottom: $grid-gutter-width / 2;
      }
    }
    .group-item {
      @include make-row();
    };
    .group-item-image {
      @include make-sm-column(3);
    }
    .group-item-details {
      text-align: left;
      @include make-sm-column(9);
    }
    .product-price {
      margin-right: 0.5em;
    }
  }
}

.collection-lookbook {
  // we need to undo the sticky footer to get this to work properlly because the images are hidden off the page and display:table mucks things up
  display: block;
  .site-content, .site-footer {
    display: block;
    height: auto;
  }

  // Image scroller
  .js & .products-wrap {
    // make the products span the whole of the page but hide the ones that go off the edge
    width: 100%;
    overflow: hidden;
    position: relative;
    opacity: 0;
    margin-bottom: $line-height-computed * 2;

    .group-item-wrap {
      background-color: #fff; // TODO: use site background color
      transition: margin 1s ease;
      // override grid cols for lookbook
      @include make-xs-column(3);
      @include make-sm-column(3);
      @include make-md-column(3);
      @include make-lg-column(3);

      width: $lookbook-item-max-width-xs;
      @media (orientation: portrait) {
        width: $lookbook-item-max-width-sm;
      }
      @media (min-width: $screen-sm-min) {
        width: $lookbook-item-max-width-sm;
      }
      @media (min-width: $screen-md-min) and (min-height: $lookbook-min-height-md) {
        width: $lookbook-item-max-width-md;
      }
      @media (min-width: $screen-lg-min) and (min-height: $lookbook-min-height-lg) {
        width: $lookbook-item-max-width-lg;
      }
    }

    [data-gallery-direction] {
      position: absolute;
      font-size: 2.75em;
      color: rgba(255,255,255,.5);
      text-shadow: 0px 1px 4px rgba(0,0,0,.3);
      .no-touch &:hover {
        color: #fff;
      }
    }

    [data-gallery-direction] {
      top: 50%;
      -webkit-transform: translateY(-50%);
      -moz-transform: translateY(-50%);
      transform: translateY(-50%);
      &.disabled, &.disabled:hover {
        color: rgba(0,0,0,.3);
        text-shadow: none;
        cursor: not-allowed;
      }
    }

    [data-gallery-direction="left"] {
      left: 2.5%;
    }

    [data-gallery-direction="right"] {
      right: 2.5%;
    }
  }
  .touch & {
    .lookbook-controls {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .collection-controls,
    .group-item-details {
      position: relative;
      z-index: 1;
    }
  }
}

.product {
  {% assign centered = false %}
  {% if settings.product_image_layout == 'center' %}
    {% assign is_centered = true %}
  {% endif %}

  .sheet-content, .product-details-content {
    @include make-row();
  }

  .product-header, .product-images, .product-details, .product-description {
    margin-bottom: $line-height-computed;
  }

  .product-images {
    text-align: center;
    img {
      margin: auto;
    }
    {% unless is_centered %}
    @media (min-width: $grid-float-breakpoint) {
      margin-top: ($line-height-computed * 2); // Line up top of image with top of page-header h1 using the same var that bs uses to calc this
    }
    {% endunless %}
  }

  {% if settings.product_image_layout == 'left' %}
    .product-header, .product-content {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: right;
      }
    }
    .product-images {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: left;
      }
    }
  {% elsif settings.product_image_layout == 'right' %}
    .product-header, .product-content {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: left;
      }
    }
    .product-images {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: right;
      }
    }
  {% elsif settings.product_image_layout == 'center' %}
    .product-header, .product-images {
      @include make-sm-column(12);
    }
    .product-details, .product-description {
      @include make-sm-column(6);
      @media (min-width: $grid-float-breakpoint) {
        float: right;
      }
    }
  {% endif %}

  .product-price {
    margin-top: $line-height-computed / 2;
    margin-bottom: $line-height-computed;
    @include make-sm-column(12);
  }

  .add-to-cart-message {
    @include make-sm-column(12);
  }

  .add-to-cart-form {
    margin-bottom: $line-height-computed;
    @include make-xs-column(12);
    {% if is_centered %}
      @include make-sm-column(12);
    {% else %}
      @include make-md-column(8);
      @include make-lg-column(6);
    {% endif %}
  }

  .social-share-links {
    @include make-row();
    & ul {
      text-align: center;
      {% if is_centered %}
        @include make-sm-column(12);
      {% else %}
        @include make-sm-column(6);
      {% endif %}
    }
  }

  .product-image-main {
    margin-bottom: $grid-gutter-width;
  }
  .product-image-thumbs {
    @include make-row();
    li {
      @include make-xs-column(6);
      @include make-sm-column(3);
      margin-bottom: $grid-gutter-width;
    }
  }
}

.cart {
  .sheet-content {
    @include make-row();
  }

  .cart-items,
  .cart-details,
  .cart-extras {
    margin: $grid-gutter-width auto;
  }

  .cart-items {
    @include make-xs-column(12);
    margin-top: 0;
  }

  .cart-details {
    @include make-xs-column(12);
    @include make-sm-column(6);
    @include make-md-column(4);
    h3 {
      margin-top: 0;
      margin-bottom: $grid-gutter-width / 2;
    }
    .cart-shipping-note,
    .cart-additional-buttons {
      margin: ($grid-gutter-width / 2) auto;
    }
  }

  .cart-extras {
    @include make-xs-column(12);
    @include make-sm-column(6);
    @include make-md-column(8);

    .cart-extras-content {
      @include make-row();
    }

    .cart-instructions {
      @include make-md-column(6);
      textarea {
        min-height: 6em;
      }
    }
  }

  .cart-message {
    @include make-sm-column(12);
  }

  .cart-item-label-mini {
    display: none;
  }

  .cart-item-quantity {
    text-align: center;
    .input-group {
      max-width: 8em;
      margin: auto;
    }
  }

  // Display cart table as a list on mobiles
  @media (max-width: $grid-float-breakpoint-max) {
    .cart-table {
      thead {
        display: none;
      }
      table, tr, td {
        display: block;
      }
      tr {
        overflow: hidden;
        border-bottom: 1px solid $table-border-color;
      }
      td {
        border-top: none;
      }
      .cart-item {
        text-align: center;
      }
      .cart-item-quantity,
      .cart-item-price,
      .cart-item-total {
        display: inline-block;
        vertical-align: middle;
      }
      .cart-item-label-mini {
        display: inline;
      }
    }
  }

  @media (min-width: $grid-float-breakpoint) {
    .cart-table td {
      vertical-align: middle;
    }
    .cart-item a {
      display: table-row;
    }
    .cart-item-image,
    .cart-item-details {
      display: table-cell;
      vertical-align: middle;
    }
    .cart-item-image {
      width: 35%;
    }
    .cart-item-details {
      padding-left: $grid-gutter-width / 2;
    }
    .cart-item-quantity,
    .cart-item-price,
    .cart-item-total {
      width: 20%;
    }
  }

}

.customers-register,
.customers-login,
.customers-activate-account,
.customers-reset-password {
  main {
    .sheet-header {
      text-align: center;
    }
    
    .sheet-content {
      @include make-row();
    }
    
    .sheet-content > div {
      @include make-xs-column(10);
      @include make-xs-column-offset(1);
      @include make-sm-column(6);
      @include make-sm-column-offset(3);
    }
  }
}

.customers-order {
  .order-address-content {
    @include make-row();
  }
  .order-billing,
  .order-shipping {
    @include make-sm-column(6);
  }
}

.customers-addresses { 
  .customer-addresses { 
    @include make-row();
  }
  .customer-addresses-card {
    @include make-md-column(6);
  }
  address,
  .customer-addresses-edit-links {
    margin-bottom: 0;
  }
}

/*
  Page
*/
.page-contact {
  .sheet-content {
    @include make-row();
  }

  .page-content, .contact-content {
    @include make-xs-column(12);
    @include make-sm-column(6);
  }
  .page-content {
    @include make-sm-column-push(6);
  }
  .contact-content {
    @include make-sm-column-pull(6);
  }
}

/*
  Homepage
*/

.homepage-section {
  .page-header {
    margin-top: 0;
  }
  
  .banner {
    margin-top: (0 - $grid-gutter-width);
    margin-bottom: (0 - $grid-gutter-width);
  }
}

/*
  Sections
*/

.homepage-section,
.product-section {
  padding: $grid-gutter-width 0;
  .sheet-content {
    @include make-row();
    margin-bottom: 0;
  }
  
  .content-split {
    .content-split-text {
      @include make-xs-column(12);
      @include make-sm-column(8);
    }
    .content-split-images {
      @include make-xs-column(12);
      @include make-sm-column(4);
    }
  }
  .content-full {
    @include make-xs-column(12);
  }
  
  &:nth-of-type(odd) {
    .content-split-text {
      @include make-sm-column-push(4);
    }
    .content-split-images {
      @include make-sm-column-pull(8);
    }
  }
  
  &:nth-child(even) {
   background-color: $homepage-section-alt-background;
  }
}
.product-section {
  h2 {
    margin-top: 0;
  }
}

/*
  Tabs
*/

.nav-tabs {
  margin-top: $grid-gutter-width;
  
  & > li.active > a {
    
    &,
    &:hover {
      background-color: white;
    }
  }
}

.tab-pane {
  padding: ($grid-gutter-width / 2);
  border: 1px #ddd solid;
  border-top: none;
  background-color: white;
  
  h1, h2, h3, h4, h5, h6, p, ul, ol {
    &:first-child {
      margin-top: 0;
    }
  }
}

/*
  Search
*/
.search-lg {
  @include make-xs-column(12);
  @include make-md-column(8);
  @include make-md-column-offset(2);
}

.search,
.not-found {    
  .sheet-content {
    @include make-row();
  }
  .search-message {
    @include make-xs-column(12);
  }
}
.read-more {
  text-align: right;
  margin-bottom: 0;
}

/*
  Blog
*/
.blog-article {
  margin-bottom: $grid-gutter-width;
  footer {
    margin-top: $grid-gutter-width;
  }
}
.blog-article-content-wrap,
.blog-article-comments {
  @include make-row();
}
.blog-article-content {
  @include make-xs-column(12);
  @include make-sm-column(9);
  @include make-sm-column-pull(3);
  @include make-lg-column(10);
  @include make-lg-column-pull(2);
}
.blog-article-meta {
  line-height: 1.5em;
  
  @include make-xs-column(12);
  @include make-sm-column(3);
  @include make-sm-column-push(9);
  @include make-lg-column(2);
  @include make-lg-column-push(10);
  
  @media (max-width: $grid-float-breakpoint) {
    ul li {
      display: inline-block;
      padding-left: ($grid-gutter-width / 4);
      padding-right: ($grid-gutter-width / 4);
      &:first-child {
        margin-left: -($grid-gutter-width / 4);
      }
    }
  }
}
.comments,
.comments-form {
  @include make-xs-column(12);
  @include make-sm-column(9);
  @include make-lg-column(6);
  clear: both;
}
.comments {
  margin-bottom: $grid-gutter-width;
}