/*
  Styles for navbar header layout snippet
*/

#header-layout-navbar {
  .navbar {
    margin-bottom: 0;
  }
  
  .cart-link {
    @media (min-width: $grid-float-breakpoint) {
      display: none;
    }
  }
  
  .header-top-menu {
    .navigation-cart {
      @media (max-width: $grid-float-breakpoint) {
        display: none;
      }
    }
  }
}