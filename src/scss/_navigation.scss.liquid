/* General styles for all navigations */

.nav-inline {
  @extend .list-inline;
  & > li {
    display: inline-block;
  }
}

[data-cart-display] > span { // this span is in the translations not in the actual theme markup
  @extend .hidden-xs;
}

.collection-sort-by {
  float: right;
  margin-right: $grid-gutter-width;
}

.collection-template-switcher {
  float: right;
  ul > li > a {
    padding-left: $grid-gutter-width / 4;
    padding-right: $grid-gutter-width / 4;
  }
}

.pagination-wrapper {
  @include make-xs-column(12);
  text-align: center;
}

.social-links {
  ul > li > a {
    padding-left: 0;
    padding-right: 0;
  }
  .footer-social & .fa {
    font-size: 1.5em;
  }
}