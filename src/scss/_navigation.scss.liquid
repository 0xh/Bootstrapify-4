/* General styles for all navigations */

.navbar-brand img {
  max-height: 200%;
  margin-top: -25%;
}

.navbar-header {
  .cart-link {
    margin-right: 0;
  }
}

[data-cart-display] > span { // this span is in the translations not in the actual theme markup
  @extend .hidden-xs;
}

.collection-controls {
  & > div {
    margin-bottom: ($grid-gutter-width / 2);
    @media (min-width: $grid-float-breakpoint) {
      float: right;
      margin-right: ($grid-gutter-width / 2);
      &:first-of-type {
        margin-right: 0;
      }
    }
  }
}

.collection-sort-by, .collection-filter-by {
  .fa {
    float: right;
    padding: 0.2em 0;
  }
}

.collection-template-switcher {
  ul > li > a {
    padding-left: $grid-gutter-width / 4;
    padding-right: $grid-gutter-width / 4;
  }
}

.pagination-wrapper {
  @include make-xs-column(12);
  text-align: center;
}

.list-links {
  li + li {
    margin-top: 0.5em;
  }
}