{
  "name": "Blog",
  "settings": [
    {
      "type": "header",
      "content": "Blog List"
    },
    {
      "label": "Article pagination limit",
      "id": "pagination_limit_articles",
      "type": "text",
      "default": "50"
    },
    {
      "label": "Truncate words for articles",
      "id": "truncate_article_results",
      "type": "text",
      "default": "200",
      "info": "This will stop articles with long content from making the blog to long. If left blank then the whole articles content will be shown."
    },
    {
      "label": "Show RSS feed link",
      "id": "enable_rss_link",
      "type": "checkbox",
      "default": true
    },
    {
      "type": "header",
      "content": "Authors"
    },
    {
      "label": "Show Author",
      "id": "blog_show_author",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Show Author Bios",
      "id": "blog_show_author_bio",
      "type": "checkbox",
      "default": true
    },
    {
      "type": "header",
      "content": "Comments"
    },
    {
      "label": "Use Gravatar for comment avatars",
      "id": "enable_gravatars",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Comment pagination limit",
      "id": "pagination_limit_comments",
      "type": "text",
      "default": "25"
    },
    {
      "type": "header",
      "content": "Article Banners"
    },
    {
      "label": "Use first image as a banner on articles",
      "id": "enable_article_banners",
      "type": "checkbox",
      "default": false,
      "info": "When checked the first image from the article will be pulled out of the content and displayed as a fullscreen banner above the article"
    },
    {
      "label": "Show artcle title over banner",
      "id": "show_article_title_on_banner",
      "type": "checkbox",
      "default": false
    },
    {
      "label": "Use first image as a banner on article lists",
      "id": "enable_article_list_banners",
      "type": "checkbox",
      "default": false,
      "info": "When checked the first image from the article will be pulled out of the content and displayed as a banner above the article excerpt"
    },
    {
      "type": "header",
      "content": "Blog Banners"
    },
    {
      "type": "paragraph",
      "content": "Blog banner images: Select a banner image to be shown in the header of each blog. You can have up to 5 blogs with banner images."
    },
    {
      "type": "paragraph",
      "content": "Blog 1"
    },
    {
      "label": "Banner image",
      "id": "blog_banner_image_1.jpg",
      "type": "image"
    },
    {
      "label": "Blog",
      "id": "blog_banner_1",
      "type": "blog"
    },
    {
      "label": "Show blog title over banner",
      "id": "blog_banner_1_title",
      "type": "checkbox",
      "default": false
    },
    {
      "label": "Banner title alignment",
      "id": "blog_banner_1_title_alignment",
      "type": "select",
      "options": [
        { "value": "left_top", "label": "Left Top" },
        { "value": "left_middle", "label": "Left Middle" },
        { "value": "left_bottom", "label": "Left Bottom" },
        { "value": "center_top", "label": "Center Top" },
        { "value": "center_middle", "label": "Center Middle" },
        { "value": "center_bottom", "label": "Center Bottom" },
        { "value": "right_top", "label": "Right Top" },
        { "value": "right_middle", "label": "Right Middle" },
        { "value": "right_bottom", "label": "Right Bottom" }
      ],
      "default": "center_middle"
    },
    
    
    
    {
      "type": "paragraph",
      "content": "Blog 2"
    },
    {
