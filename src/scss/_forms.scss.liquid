.add-to-cart-form, .cart-form, .contact-form {
  label {
    @extend .control-label;
  }
  
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=tel],
  input[type=number],
  select,
  textarea {
    @extend .form-control;
  }
  
  .selector-wrapper {
    @extend .form-group;
  }
  
  .errors, .note, & + .add-to-cart-message .note {
    @extend .alert;
  }
  
  .errors, .note.error {
    @extend .alert-danger;
  }
  
  .note.success, & + .add-to-cart-message .note.success {
    @extend .alert-success;
  }
}