<main role="main">
  <article class="sheet">
    <header class="sheet-header">
      <h1>{{ 'customer_accounts.register.page_title' | t }}</h1>
    </header>

    <section class="sheet-content">
      
      <div id="customer-register-form">
        {% form 'create_customer' %}
          {% include 'form_errors' %}
          
          <div class="form-group">
            <label for="first-name">First Name</label>
            <input class="form-control input-lg" type="text" value="{{ form.first_name }}" name="customer[first_name]" id="first-name" placeholder="First Name" />
          </div>
          
          <div class="form-group">
            <label for="last-name">Last Name</label>
            <input class="form-control input-lg" type="text" value="{{ form.lsst_name }}" name="customer[last_name]" id="last-name" placeholder="Last Name" />
          </div>
          
          <div class="form-group {% if form.errors contains 'email' %}has-error{% endif %}">
            <label for="customer_email">Email</label>
            <input class="form-control input-lg" type="email" value="{{ form.email }}" name="customer[email]" id="customer_email" placeholder="Email" />
          </div>
          
          <div class="form-group {% if form.errors contains 'password' %}has-error{% endif %}">
            <label for="customer_password">Password</label>
            <input class="form-control input-lg" type="password" value="{{ form.password }}" name="customer[password]" id="customer_password" placeholder="Passsword" />
          </div>
        
          {% if current_url %}<input type="hidden" name="checkout_url" value="{{ current_url }}" />{% endif %}
          <input class="btn btn-primary btn-lg" type="submit" value="Register" />
          <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
        {% endform %}
      </div>
      
    </section>
  </article>
</main>

{% include 'site_aside' %}