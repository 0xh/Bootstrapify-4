.add-to-cart-form,
.cart-form,
.contact-form,
.newsletter-form,
.customer-register-form {
  
  .selector-wrapper {
    // added in by shopify's js
    @extend .form-group;
    select {
      @extend .form-control;
    }
  }
  
  // notes and errors are either created by Shopify or JS
  .errors, .note {
    @extend .alert;
  }
  
  .errors, .note.error {
    @extend .alert-danger;
  }
  
  .note.success {
    @extend .alert-success;
  }
}

.add-to-cart-message, .cart-message {
  .note {
    @extend .alert;
  }
  .note.success {
    @extend .alert-success;
  }
}

.search-lg {
  padding: 1.5em 1em;
  text-align: center;
  .form-control {
    @extend .input-lg;
  }
  .btn {
    @extend .btn-lg;
  }
}

.placeholder {
  [class*="customers"] {
    label {
      display: none;
    }
  }
}