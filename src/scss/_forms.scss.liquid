
.contact-form {
  label {
    @extend .control-label;
  }
  
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=tel],
  textarea {
    @extend .form-control;
  }
  
  input[type=submit] {
    @extend .btn;
    @extend .btn-primary;
  }
  
  .errors, .note {
    @extend .alert;
  }
  
  .errors {
    @extend .alert-danger;
  }
  
  .note {
    @extend .alert-success;
  }
}