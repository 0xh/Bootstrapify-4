
.add-to-cart-form, .contact-form {
  label {
    @extend .control-label;
  }
  
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=tel],
  input[type=number],
  select,
  textarea {
    @extend .form-control;
  }
  
  .selector-wrapper {
    @extend .form-group;
  }
  
  input[type=submit] {
    @extend .btn;
    @extend .btn-primary;
    
    &.btn-add-to-cart {
      @extend .btn-lg;
      @extend .btn-block;
    }
  }
  
  .errors, .note {
    @extend .alert;
  }
  
  .errors {
    @extend .alert-danger;
  }
  
  .note {
    @extend .alert-success;
  }
}