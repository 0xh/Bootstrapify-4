/* Grids and Layouts */

.page {
  @extend {% if settings.container-width == 'fluid' %}.container-fluid{% else %}.container{% endif %};
}

.collection--grid,
.product--grid {
  @include make-row();
}

.collection--wrap,
.product--wrap {
  @include make-sm-column(3);
}

/* Block Element Styles */

.page-header {
  @extend .page-header;
}

.collection--item,
.product--item {
  @extend .thumbnail;
}

.collection--image,
.product--image {
}
